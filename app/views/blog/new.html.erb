<h2>Add a New Blog</h2>

<%= form_with model: @blog do |form| %>
    <% form.label :title %>
    <br>
    <% form.text_field :title %>
    <br>
    <br>
    <% form.label :content %> 
    <br>
    <% form.text_field :content %>
    <br>
    <br>
    <%= form.submit 'Add Blog' %>
    <% end %>

    <p><%= link_to 'Back Home', blogs_path %></p>






